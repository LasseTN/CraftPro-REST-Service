{
  "ConnectionStrings": {
    "Database": "Data Source=.;Database=CraftPro;integrated security=true;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\CraftPro\\Services\\CraftPro-REST-Service\\CraftPro-REST-Service\\logs\\log-.txt",
          "rollingInterval": "Day",
          "RollOnFileSizeLimit": true,
          "retainedFileCountLimit": 31, // Beholder op til 31 logfiler - 1 m√•neds filer
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "frontend_url": "http://localhost:3000"
}
